# Show the startup message?
startup_message off

# Create special screen for programs like Vim?
altscreen on

# Enable the bell?
vbell off

# Change the escape key to "`"
#escape ``

# The tab line format
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'
#hardstatus string '%{gk}[ %{G}%H %{g}][%= %{wk}%?%-Lw%?%{=b kR}(%{W}%n*%f %t%?(%u)%?%{=b kR})%{= kw}%?%+Lw%?%?%= %{g}][%{Y}%l%{g}]%{=b C}[ %m/%d %c ]%{W}'

scrollback 15000
termcapinfo xterm* ti@:te@

# Do not use xterms alternate window buffer (add lines to scrollback bfr)
#termcapinfo xterm|xterms|xs ti=\E7\E[?47l


# Where to send the status message
#hstatus ""

# Bind ALT-< and ALT-> keys to move in windows
bindkey "^[," prev
bindkey "^[." next

# Set the startup sessions
screen -t screen          0
#screen                   2
#screen                   3
#screen                   4
#screen                   5
#screen                   6
#screen -t Email          1   mutt -y

